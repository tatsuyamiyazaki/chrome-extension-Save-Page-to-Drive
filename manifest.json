{
  "manifest_version": 3,
  "name": "Save Page to Drive",
  "version": "0.1.0",
  "description": "Convert the active page to PDF and save to Google Drive.",
  "action": {
    "default_title": "Save Page to Drive",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/worker.js",
    "type": "module"
  },
  "options_page": "src/options/index.html",
  "permissions": [
    "identity",
    "storage",
    "scripting",
    "contextMenus",
    "notifications",
    "debugger",
    "activeTab",
    "tabs"
  ],
  "oauth2": {
    "client_id": "YOUR_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/drive.file"
    ]
  },
  "host_permissions": [
    "https://www.googleapis.com/*"
  ],
  "icons": {
    "16": "assets/icons/16.png",
    "32": "assets/icons/32.png",
    "128": "assets/icons/128.png"
  },
  "default_locale": "ja"
}
